{
  "editor.formatOnSave": true,
  "javascript.format.enable": true,
  "workbench.editor.enablePreview": false,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "scss.validate": false,
  "css.validate": false,
  "eslint.run": "onSave",
  "prettier.singleQuote": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
